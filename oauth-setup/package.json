{
  "name": "codex-universal-oauth-security",
  "version": "2.0.0",
  "description": "Secure OAuth authentication service with PKCE, token rotation, and comprehensive security features",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "test": "jest --coverage --verbose",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:security": "jest tests/security --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint server/**/*.js tests/**/*.js"
  },
  "keywords": [
    "oauth",
    "authentication",
    "pkce",
    "security",
    "github",
    "express",
    "jwt",
    "token-rotation",
    "mobile-security"
  ],
  "author": "Codex Universal Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.2",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-session": "^1.17.3",
    "express-rate-limit": "^7.1.5",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  }
}
